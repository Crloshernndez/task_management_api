[flake8]
max-line-length = 88
extend-ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by black)
    E501,
    # F401: module imported but unused (handled by isort)
    F401,

exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    ENV,
    .env,
    build,
    dist,
    *.egg-info,

per-file-ignores =
    # __init__.py files can have unused imports
    __init__.py:F401,F403
    # Settings files can have long lines
    */config.py:E501

max-complexity = 10
import-order-style = google
application-import-names = app,tests
